unit UntFormulario;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, UntPessoa, Vcl.StdCtrls,
  System.Generics.Collections, Data.DB, MemDS, DBAccess, Ora, Vcl.Grids,
  Vcl.DBGrids, OraCall, Vcl.ExtCtrls, Vcl.DBCtrls;




type
  TForm1 = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    DBGrid1: TDBGrid;
    Panel4: TPanel;
    id: TEdit;
    Label1: TLabel;
    data_cadastro: TEdit;
    Label2: TLabel;
    nome: TEdit;
    registro: TEdit;
    salvar: TButton;
    Label3: TLabel;
    Label4: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure salvarClick(Sender: TObject);
  private
    procedure Adicionar;
    { Private declarations }
  public
    { Public declarations }
    Pessoas: TList<tPessoa>;
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

uses Unit1;


{ TForm1 }

procedure TForm1.Button1Click(Sender: TObject);
begin
  Adicionar;
end;

procedure TForm1.salvarClick(Sender: TObject);
var i: TPessoa;
begin
   //for I in pessoas do
   //ShowMessage(i.nome);
     Adicionar;
     
end;

procedure TForm1.FormCreate(Sender: TObject);
begin

   Pessoas := TList<tPessoa>.Create;
   Pessoas.Clear;
end;

procedure TForm1.Adicionar;
var Pessoa: TPessoa;
begin

       Pessoa := tPessoa.Create;
       pessoa.registro := registro.Text;
       Pessoas.Add(pessoa);

end;


end.
